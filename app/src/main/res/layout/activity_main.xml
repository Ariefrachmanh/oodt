    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.asus.afinal.MainActivity"
        android:gravity="center"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <!--bagian ini untuk menampilkan text-->
            <TextView
                android:text="Welcome Gais !"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSplash"
                android:textSize="30sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="37dp"
                />

        <!--bagian ini untuk menampilkan gambar-->
        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvSplash"
            android:src="@drawable/logo" />

        <!--bagian ini untuk menampilkan text-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Created By :"
            android:textStyle="bold"/>
        <!--bagian ini untuk menampilkan text-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Alfi Maulana R    1541180103" />
        <!--bagian ini untuk menampilkan text-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Arief Rachman H   1541180141" />
        <!--bagian ini untuk menampilkan text-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Reference Image :"
            android:textStyle="bold"/>
        <!--bagian ini untuk menampilkan text-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Freepick.com" />
        <!--bagian ini untuk membuat button agar pindah ke activity lain dengan menggunakan onClik-->
        <Button
            android:onClick="Masuk"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:text="Masuk"
            android:textColor="#ffffff" />
    </RelativeLayout>

